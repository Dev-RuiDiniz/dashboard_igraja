@inherits LayoutComponentBase

@using Microsoft.AspNetCore.Components.Authorization
@inject AuthService AuthService
@inject ApiAuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation

<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="_theme" />
<MudDialogProvider FullWidth="true" MaxWidth="MaxWidth.ExtraSmall" CloseButton="true" />
<MudSnackbarProvider />
<MudPopoverProvider />

<MudLayout>
    <MudAppBar Elevation="1" Color="Color.Primary">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <div class="appbar-brand">
            <img src="images/logo-igreja.svg" alt="Primeira Igreja Batista de Taubaté" />
            <MudText Typo="Typo.h5" Class="ml-3">Igreja Social</MudText>
        </div>
        <MudSpacer />
        <AuthorizeView>
            <Authorized Context="authState">
                <MudText Typo="Typo.subtitle2" Class="mr-4">@authState.User.Identity?.Name</MudText>
                <MudButton Variant="Variant.Outlined" Color="Color.Inherit" OnClick="Logout">
                    Sair
                </MudButton>
            </Authorized>
            <NotAuthorized>
                <MudButton Variant="Variant.Outlined" Color="Color.Inherit" OnClick="@(() => Navigation.NavigateTo("/login"))">
                    Entrar
                </MudButton>
            </NotAuthorized>
        </AuthorizeView>
        <MudToggleIconButton @bind-Toggled="@_isDarkMode"
                             Icon="@Icons.Material.Filled.LightMode" Color="Color.Inherit"
                             ToggledIcon="@Icons.Material.Filled.DarkMode" ToggledColor="Color.Inherit" />
        <MudIconButton Icon="@Icons.Material.Filled.Settings" Color="Color.Inherit" />
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2" Variant="@DrawerVariant.Responsive">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Menu Principal</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>

    <MudMainContent Class="pa-4 main-content">
        <MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;
    bool _isDarkMode = false;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    private async Task Logout()
    {
        await AuthService.LogoutAsync();
        AuthStateProvider.NotifyAuthenticationStateChanged();
        Navigation.NavigateTo("/login");
    }

    // Customização de Cores (Opcional - Estilo Igreja)
    MudTheme _theme = new MudTheme()
    {
        PaletteLight = new PaletteLight()
        {
            Primary = "#1f4b86",    // Azul principal
            Secondary = "#d4a437",  // Dourado
            AppbarBackground = "#1f4b86",
            Background = "#f5f7fb",
            Surface = "#ffffff",
        },
        PaletteDark = new PaletteDark()
        {
            Primary = "#1f4b86",
            Secondary = "#d4a437",
        }
    };
}
