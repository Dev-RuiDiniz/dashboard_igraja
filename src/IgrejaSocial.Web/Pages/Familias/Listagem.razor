@page "/familias"
@inject FamiliaService FamiliaService
@inject ISnackbar Snackbar

<MudText Typo="Typo.h4" Class="mb-4">Gerenciamento de Famílias</MudText>

<MudTable Items="@_familias" Hover="true" Bordered="false" Striped="true" Filter="new Func<Familia,bool>(FilterFunc1)">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Famílias Cadastradas</MudText>
        <MudSpacer />
        <MudTextField @bind-Value="_searchString" Placeholder="Buscar por CPF, Bairro ou Nome" 
                      Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" 
                      IconSize="Size.Medium" Class="mt-0"></MudTextField>
    </ToolBarContent>
    <HeaderContent>
        <MudTh>Responsável</MudTh>
        <MudTh>CPF</MudTh>
        <MudTh>Bairro</MudTh>
        <MudTh>Renda Per Capita</MudTh>
        <MudTh>Status</MudTh>
        <MudTh>Ações</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Nome">@context.NomeResponsavel</MudTd>
        <MudTd DataLabel="CPF">@context.Cpf</MudTd>
        <MudTd DataLabel="Bairro">@context.Bairro</MudTd>
        <MudTd DataLabel="Renda">@context.RendaPerCapita.ToString("C")</MudTd>
        <MudTd DataLabel="Status">
            @if (context.IsVulneravel)
            {
                <MudChip Color="Color.Error" Size="Size.Small">Vulnerável</MudChip>
            }
            else
            {
                <MudChip Color="Color.Success" Size="Size.Small">Estável</MudChip>
            }
        </MudTd>
        <MudTd>
            <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Primary" Size="Size.Small" />
            <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error" Size="Size.Small" />
        </MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager InfoFormat="Exibindo {first_item}-{last_item} de {all_items}" RowsPerPageString="Linhas por página:" />
    </PagerContent>
</MudTable>

@code {
    private string _searchString = "";
    private List<Familia> _familias = new();

    protected override async Task OnInitializedAsync()
    {
        _familias = await FamiliaService.GetFamiliasAsync();
    }

    private bool FilterFunc1(Familia familia) => FilterFunc(familia, _searchString);

    private bool FilterFunc(Familia familia, string searchString)
    {
        if (string.IsNullOrWhiteSpace(searchString)) return true;
        if (familia.NomeResponsavel.Contains(searchString, StringComparison.OrdinalIgnoreCase)) return true;
        if (familia.Cpf.Contains(searchString)) return true;
        if (familia.Bairro.Contains(searchString, StringComparison.OrdinalIgnoreCase)) return true;
        return false;
    }
}