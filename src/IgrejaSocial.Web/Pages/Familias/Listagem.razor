@page "/familias"
@using IgrejaSocial.Domain.Entities
@inject FamiliaService FamiliaService

<MudText Typo="Typo.h4" Class="mb-4">Gerenciamento de Famílias</MudText>

<MudTable Items="@_familias" Hover="true" Striped="true" Filter="new Func<Familia,bool>(FilterFunc1)" T="Familia" Elevation="2">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Famílias Cadastradas</MudText>
        <MudSpacer />
        <MudTextField @bind-Value="_searchString" Placeholder="Buscar por Nome, CPF ou Endereço..." 
                      Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0" />
    </ToolBarContent>
    <HeaderContent>
        <MudTh>Responsável</MudTh>
        <MudTh>CPF</MudTh>
        <MudTh>Endereço</MudTh>
        <MudTh>Renda Per Capita</MudTh>
        <MudTh>Vulnerabilidade</MudTh>
        <MudTh>Ações</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Responsável">@context.NomeResponsavel</MudTd>
        <MudTd DataLabel="CPF">@context.CpfResponsavel</MudTd>
        <MudTd DataLabel="Endereço">@context.Endereco</MudTd>
        <MudTd DataLabel="Renda">@context.RendaPerCapita.ToString("C")</MudTd>
        <MudTd DataLabel="Status">
            <MudChip T="string" Color="@(context.IsVulneravel ? Color.Error : Color.Success)" Size="Size.Small" Variant="Variant.Text">
                @(context.IsVulneravel ? "Vulnerável" : "Estável")
            </MudChip>
        </MudTd>
        <MudTd>
            <MudIconButton Icon="@Icons.Material.Filled.Visibility" Color="Color.Info" Size="Size.Small" Title="Ver Detalhes" />
            <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Primary" Size="Size.Small" Title="Editar" />
        </MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager InfoFormat="Exibindo {first_item}-{last_item} de {all_items}" RowsPerPageString="Linhas por página:" />
    </PagerContent>
</MudTable>

@code {
    private string _searchString = "";
    private List<Familia> _familias = new();

    protected override async Task OnInitializedAsync()
    {
        _familias = await FamiliaService.GetFamiliasAsync();
    }

    private bool FilterFunc1(Familia familia) => FilterFunc(familia, _searchString);

    private bool FilterFunc(Familia familia, string searchString)
    {
        if (string.IsNullOrWhiteSpace(searchString)) return true;
        
        // Busca baseada nos campos REAIS da sua classe Familia.cs
        if (familia.NomeResponsavel?.Contains(searchString, StringComparison.OrdinalIgnoreCase) ?? false) return true;
        if (familia.CpfResponsavel?.Contains(searchString) ?? false) return true;
        if (familia.Endereco?.Contains(searchString, StringComparison.OrdinalIgnoreCase) ?? false) return true;
        
        return false;
    }
}