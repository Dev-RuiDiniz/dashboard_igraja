@using MudBlazor
@using IgrejaSocial.Domain.Entities
@using IgrejaSocial.Domain.Models

@inject CestaService CestaService
@inject IDialogService DialogService
@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        <MudStack Spacing="2">
            <MudText Typo="Typo.subtitle1">@_titulo</MudText>

            <MudDatePicker Label="Data da Entrega" @bind-Date="_dataEntrega" />

            <MudTextField T="string" Label="Observações" Lines="3" TextArea="true"
                          @bind-Value="_observacoes" />
        </MudStack>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancelar</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit">Confirmar Entrega</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] public MudDialogInstance? MudDialog { get; set; }
    [Parameter] public Familia? FamiliaSelecionada { get; set; }

    private DateTime? _dataEntrega = DateTime.UtcNow.Date;
    private string _observacoes = string.Empty;
    private string _titulo = "Registrar entrega de cesta básica";

    protected override void OnInitialized()
    {
        if (FamiliaSelecionada is not null)
        {
            _titulo = $"Registrar entrega - {FamiliaSelecionada.NomeResponsavel}";
        }
    }

    private async Task Cancel()
    {
        var confirmar = await DialogService.ShowMessageBox(
            "Cancelar registro",
            "Deseja cancelar o registro da entrega?",
            yesText: "Sim",
            cancelText: "Não");

        if (confirmar == true)
        {
            MudDialog?.Cancel();
        }
    }

    private async Task Submit()
    {
        if (FamiliaSelecionada is null)
        {
            Snackbar.Add("Selecione uma família para registrar a entrega.", Severity.Error);
            return;
        }

        var confirmar = await DialogService.ShowMessageBox(
            "Confirmar entrega",
            "Deseja confirmar a entrega da cesta básica?",
            yesText: "Confirmar",
            cancelText: "Voltar");

        if (confirmar != true)
        {
            return;
        }

        var request = new CestaBasicaEntregaRequest
        {
            FamiliaId = FamiliaSelecionada.Id,
            DataEntrega = _dataEntrega ?? DateTime.UtcNow.Date,
            Observacoes = _observacoes
        };

        var sucesso = await CestaService.RegistrarEntregaAsync(request);
        if (sucesso)
        {
            MudDialog?.Close(DialogResult.Ok(true));
        }
    }
}
